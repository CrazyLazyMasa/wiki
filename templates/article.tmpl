{{ template "layout.tmpl" .}}

{{ define "article" }}
<header>
    <h2>{{ .article.Title }}</h2>
    <p>posted on today {{.article.Created}}</p>
    <p>updated {{.article.Updated}}</p>
</header>
<div id="article">
    {{ .article.Body }}
</div>
<p><a href="/article/{{.article.ID}}/edit">edit this</a></p>
{{end}}

