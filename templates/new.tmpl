<!DOCTYPE html>
<html lang="en">
{{ template "header" . }}
<body>
    {{ template "global-navigator" . }}
    <div class="container">
        <header>
            <h1>New Article: go-wiki</h1>
        </header>
        <article>
            <form action="/save" method="POST">
                {{ template "csrf-hidden" . }}
                <input type="text" name="title">
                <textarea id="" name="body" cols="30" rows="10">
                </textarea>
                <input type="submit" value="save">
            </form>
        </article>
        <aside>
            <h2></h2>
        </aside>
        {{ template "footer" .}}
    </div>
</body>
</html>
